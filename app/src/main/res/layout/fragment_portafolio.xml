<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.curso.tinodeoz.portal_prueba.principal"
    android:background="@drawable/fond">


    <ImageView
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/bannerp"
        />
    <TextView
        android:id="@+id/banner2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/banner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="15dp"
        android:text="Mi portafolio mÃ³vil."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:textStyle="italic"
        />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner2"
        android:background="@android:color/transparent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="#77ffffff"
            android:orientation="vertical"
           >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    >
                    <Button
                        android:id="@+id/Agregar_Expediente"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/fondo_btn"
                        android:text="Agregar Expediente"
                        android:textSize="10sp"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/Mostrar"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/fondo_btn"
                        android:text="Portafolio de asuntos"
                        android:textSize="10sp"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <Button
                    android:id="@+id/Actualizar"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/fondo_btn"
                    android:text="Actualizar Expedientes."
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_busqueda"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Seleccione su opcion de busqueda:"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"/>

            <Spinner
                android:id="@+id/spinner_busqueda"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />

            <TextView
                android:id="@+id/txt_distrito"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Seleccione su distrito:"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"/>

            <Spinner
                android:id="@+id/spinner_distrito"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />

            <TextView
                android:id="@+id/txt_juzgado"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Seleccione su juzgado:"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinner_juzgado"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />

            <Spinner
                android:id="@+id/spinner_juzgado2"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />



            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                >

                <TableLayout
                    android:id="@+id/Tabla_portafolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    >
                </TableLayout>
            </HorizontalScrollView>


            <RelativeLayout
                android:id="@+id/Relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:id="@+id/Contenedor"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <Button
                            android:id="@+id/nueva_consulta"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/fondo_btn"
                            android:text="Regresar"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <Button
                            android:id="@+id/Salir"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/fondo_btn"
                            android:text="Salir."
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_borrar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/Contenedor"
                    >

                    <Button
                        android:id="@+id/borrar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fondo_btn"
                        android:text="Eliminar Del Portafolio Y Salir."
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_expediente"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Ingrese su numero de expediente a eliminar:"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/txt_no_expediente"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:maxLength="11"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:gravity="center"
                android:hint="Ingrese aqui:"
                android:inputType="text"/>
            <Button
                android:id="@+id/eliminar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/fondo_btn"
                android:text="Eliminar"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
