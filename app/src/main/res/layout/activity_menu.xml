<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.curso.tinodeoz.portal_prueba.principal"
    android:background="@drawable/fond">


    <ImageView
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/bannerp"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/banner">


    <ImageView
        android:id="@+id/banner2"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/mazo"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtmazo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner2"
        android:textSize="20sp"
        android:text="@string/pie_de_imagen"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txtdes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtmazo"
        android:textSize="13sp"
        android:text="@string/info"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />


</RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/pie"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/info"
            android:contentDescription=""
            tools:ignore="ContentDescription" />
    </LinearLayout>
</RelativeLayout>
