<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.curso.tinodeoz.portal_prueba.principal"
    android:background="@drawable/fond">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/bannerp"
        />

    <TextView
        android:id="@+id/banner2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/banner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="15dp"
        android:text="Acuerdo de Promoción."
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:textStyle="italic"

        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/banner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="15dp"
            android:background="#77ffffff"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_promo_distrito"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Seleccione su distrito:"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"/>

            <Spinner
                android:id="@+id/spinner_promo_distrito"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />

            <TextView
                android:id="@+id/txt_promo"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Seleccione el tipo de promoción:"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinner_promo_inicial"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />

            <Spinner
                android:id="@+id/spinner_promo_posterior"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@android:color/darker_gray"
                android:hint="Seleccione aqui:"
                />

            <TextView
                android:id="@+id/txt_promo_expediente"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Ingrese su numero de expediente::"
                android:textColor="?android:attr/colorBackground"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/txt_promo_no_expediente"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:maxLength="11"
                android:gravity="center"
                android:hint="Ingrese aqui:"
                android:inputType="text"/>
            <Button
                android:id="@+id/promo_consultar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/fondo_btn"
                android:text="Consultar"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <Button
                            android:id="@+id/nueva_consulta"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/fondo_btn"
                            android:text="Nueva Consulta"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <Button
                            android:id="@+id/Salir"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/fondo_btn"
                            android:text="Salir."
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>